{
	"name": "imago",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "prettier --write .",
		"check-types": "turbo run check-types",
		"login": "turbo login --manual",
		"gen:icons": "node --experimental-transform-types ./packages/ui/src/lib/icons/script.ts",
		"docs:build": "turbo build --filter=docs"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"prettier": "^3.7.3",
		"prettier-plugin-svelte": "^3.4.0",
		"turbo": "^2.6.1"
	},
	"packageManager": "pnpm@10.28.0",
	"engines": {
		"node": ">=18"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@sentry/cli",
			"argon2",
			"esbuild",
			"isolated-vm",
			"oracledb",
			"sharp",
			"sqlite3",
			"vue-demi"
		],
		"ignoredBuiltDependencies": [
			"esbuild"
		]
	}
}
