{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".svelte-kit/**"],
			"passThroughEnv": [
				"SENTRY_DSN",
				"SENTRY_PROJECT",
				"SENTRY_AUTH_TOKEN",
				"BRANCH",
				"SENTRY_RELEASE",
				"BUILDING",
				"CI"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"preview": {
			"outputs": [".vitepress/dist/**"]
		}
	}
}
